<section class="section">
  <h1 class="text-xl font-bold mb-5">Your Characters</h1>
  <%= if Enum.empty?(@characters) do %>
    <p class="text-gray-600 mb-5">Looks like no oneâ€™s home.</p>
  <% else %>
    <ul class="mb-8">
      <%= for character <- @characters do %>
        <li class="mb-1"><%= link character.name, to: Routes.character_path(@conn, :show, character), class: "link" %></li>
      <% end %>
    </ul>
  <% end %>

  <%= link "Add someone new", to: Routes.live_path(@conn, CharacterLive.New), class: "btn" %>
</section>
